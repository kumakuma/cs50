/**
 *  water.c
 * 
 *  Calculates how many bottles of water a persons shower takes 
 *  input: how many whole minutes
 *  output: prints the number of bottles a the user's shower takes
 * 
 * Dan Smith
 * dan.smith.me@gmail.com
 * 
 * cs50 pset1
 * 
 */


#include <stdio.h>
#include <cs50.h>

int main(void)
{
    // initialise minutes to 0     
    int minutes = 0;

    // while minutes is still not a positive amount of minutes
    while (minutes < 1)
    {
        // request minutes that person showers for
        printf("minutes: ");
        minutes = GetInt();
    }

    // do the math and print how many water bottles it is equivalent to
    printf("bottles: %i\n", (int)(minutes * 1.5 * 128 / 16));
}